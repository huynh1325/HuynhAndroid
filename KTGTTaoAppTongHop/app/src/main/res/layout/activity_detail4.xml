<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail4">

    <ImageView
        android:id="@+id/image4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/rubendias"/>

    <TextView
        android:id="@+id/tv14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruben Dias"
        android:layout_below="@id/image4"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv14"
        android:layout_marginTop="10dp"
        android:text="Club: Manchester City"
        android:textSize="25sp"/>


    <TextView
        android:id="@+id/tv34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv24"
        android:layout_marginTop="10dp"
        android:text="Nationality: Portugal"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv34"
        android:layout_marginTop="10dp"
        android:text="14/5/1997"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv44"
        android:layout_marginTop="10dp"
        android:text="Center Back"
        android:textSize="25sp"/>


    <Button
        android:id="@+id/btnback4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv54"
        android:layout_marginTop="10dp"
        android:text="BACK"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>