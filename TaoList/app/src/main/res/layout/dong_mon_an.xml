<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewHinh"
        android:padding="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/textviewTen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:text="Tên"
        android:layout_toRightOf="@id/imageviewHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewmota"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Mô tả"
        android:textColor="#280D0F10"
        android:layout_toRightOf="@id/imageviewHinh"
        android:layout_below="@id/textviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#2196F3"
        android:padding="10dp"
        android:layout_toRightOf="@id/textviewTen"
        android:layout_marginTop="90dp"/>

    <ImageView
        android:id="@+id/imgCong"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="2dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/textviewGia"/>

    <ImageView
        android:id="@+id/imgTru"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="2dp"
        android:layout_toRightOf="@id/textviewGia"
        android:layout_below="@id/imgCong"/>

</RelativeLayout>